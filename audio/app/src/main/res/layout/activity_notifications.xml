<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Notifications">

    <include layout="@layout/toolbar_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeBlack"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/layout_switch_all_notifications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:background="@color/themeGray"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_6dp"
            android:padding="@dimen/_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_18font"
                android:textStyle="bold"
                android:text="@string/all_push_notifications"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_all_push_notifications"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:gravity="center"
                android:thumbTint="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@color/themeGray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:padding="@dimen/_8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:padding="@dimen/_8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_battery_capacity"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16font"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/battery"/>

                <CheckBox
                    android:id="@+id/checkbox_battery_notifications"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:buttonTint="@color/themeYellow"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:padding="@dimen/_8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:padding="@dimen/_8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_promotions"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16font"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/activity_and_promotions"/>

                <CheckBox
                    android:id="@+id/checkbox_activity_promotion"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:buttonTint="@color/themeYellow"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"></LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>