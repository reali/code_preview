<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeBlack"
    tools:context=".activities.AppUpdate">

    <include layout="@layout/toolbar_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeGray"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginTop="@dimen/_12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12dp"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18font"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/bass_booster"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_bass_booster"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:enabled="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:thumbTint="@color/white"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="194dp"
            android:layout_height=".5dp"
            android:layout_gravity="center"
            android:background="@color/themeBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/_3d"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_3d"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:enabled="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:thumbTint="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="194dp"
            android:layout_height=".5dp"
            android:layout_gravity="center"
            android:background="@color/themeBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeGray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_12dp"
            android:paddingTop="6dp"
            android:paddingRight="@dimen/_12dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".45"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="@string/equalizer"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".15"
                android:fontFamily="@font/roboto"
                android:text="@string/edit"
                android:visibility="invisible" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_equalizer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:enabled="false"
                android:gravity="center_vertical"
                android:thumbTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_marginStart="@dimen/_12dp"
       android:layout_marginEnd="@dimen/_12dp"
       android:layout_marginBottom="@dimen/_12dp"
       android:background="@color/themeGray">

       <ListView
           android:id="@+id/bandsList"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone" />

   </LinearLayout>

</LinearLayout>