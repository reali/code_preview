<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeBlack">

    <include layout="@layout/toolbar_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeGray"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_marginTop="@dimen/_8dp"
        android:padding="@dimen/_12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:textColor="@color/white"
            android:textSize="@dimen/_18font"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/voice_command"/>

        <Switch
            android:id="@+id/switch_voice_command"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:thumbTint="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_prompt_note"
        android:textColor="@color/white"
        android:padding="@dimen/_12dp"
        android:textStyle="bold"
        android:textSize="@dimen/_16font"
        android:gravity="center"
        android:background="@color/themeGray"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeGray"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginBottom="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"/>

</LinearLayout>