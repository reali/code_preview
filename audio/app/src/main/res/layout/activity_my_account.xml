<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBlack"
    android:orientation="vertical"
    tools:context=".activities.MyAccount">

    <include android:layout="@layout/toolbar_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:layout_margin="@dimen/_12dp"
        android:background="@color/themeGray">

        <ImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="@dimen/_94dp"
            android:layout_height="@dimen/_94dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8dp"
            android:src="@drawable/ic_profile_pic"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16font"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_below="@+id/iv_user_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8dp"
            android:text="UserName"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16font"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_below="@+id/tv_username"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_4dp"
            android:text="user@example.com"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_marginBottom="@dimen/_12dp"
        android:background="@color/themeGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_change_password"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="8dp"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font" />

            <ImageView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/themeBlack"/>

        <LinearLayout
            android:id="@+id/layout_warranty_record"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="8dp"
                android:text="@string/warranty_record"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font" />

            <ImageView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/themeBlack"/>

        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="8dp"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font" />

            <ImageView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/themeBlack"/>

        <LinearLayout
            android:id="@+id/layout_sign_out"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="8dp"
                android:textAllCaps="true"
                android:text="@string/signout"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font" />

            <ImageView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>