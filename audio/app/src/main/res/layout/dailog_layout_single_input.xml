<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dailog_style"
    android:layout_margin="@dimen/_36dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_input_dailog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="@dimen/_8dp"
        android:textSize="@dimen/_16font"
        android:fontFamily="@font/roboto"
        android:text="title"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_12dp"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/_14font"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_ok_input_dialog"
        android:layout_width="@dimen/_128dp"
        android:layout_height="@dimen/_36dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:layout_margin="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_12dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/button_style"
        android:text="ok"/>

</LinearLayout>